<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.oneweek.miluo.myapplication.MainActivity"
    android:background="#333333">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coding Unbarred"
        android:id="@+id/textView"
        android:textColor="#FFFFFF"
        android:textSize="60px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/courses"
        android:id="@+id/courses"
        android:background="#FFFFFF"
        android:layout_above="@+id/resources"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:onClick="showCourseSelection" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/resources"
        android:id="@+id/resources"
        android:background="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="showResourceSelection" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sandbox"
        android:id="@+id/sandbox"
        android:background="#FFFFFF"
        android:layout_below="@+id/resources"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="showSandbox" />

</RelativeLayout>
